<% provide(:title, @page.title) %>
<h1><%= @page.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@page) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :content %>
        <%= f.text_field :content %>

        <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>

</div>